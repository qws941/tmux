#!/usr/bin/env bash
# tmux-goto-opencode â€” switch to or create opencode session
set -euo pipefail

SESSION="opencode"
DIR="$HOME/.config/opencode"

if tmux has-session -t "$SESSION" 2>/dev/null; then
  tmux switch-client -t "$SESSION"
else
  tmux new-session -ds "$SESSION" -c "$DIR"
  tmux switch-client -t "$SESSION"
fi
